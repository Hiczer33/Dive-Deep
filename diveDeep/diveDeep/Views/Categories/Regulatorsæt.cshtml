@model IEnumerable<diveDeep.Models.Regulatorset>

<h3>Regulatorsæts</h3>

@if (Model == null || !Model.Any())
{
    <p>Ingen Regulatorset fundet.</p>
}
else
{
    <div class="container">

    <div class="row g-3">
        @foreach (var item in Model)
        {

            <div class="col-12 col-sm-6 col-lg-4">
                <a class="text-decoration-none" href="#">
                        <div class="card product-card h-100">
                        <img src="@item.ImageUrl" alt="@item.Brand" class="product-img" />

                        <div class="card-body">
                            <h5 class="card-title">@item.Brand</h5>

                            <div class="row">
                                <div class="col-6">
                                    <p class="card-text mb-1"><strong>1.Trin:</strong> @item.FirstStep</p>
                                    <p class="card-text mb-1"><strong>2.Trin:</strong> @item.SecondStep</p>
                                </div>

                                <div class="col-6">
                                    <p class="card-text mb-1"><strong>Octopus:</strong> @item.Octopus</p>
                                    <p class="card-text"><strong>Pris/dag:</strong> @item.PricePrDay.ToString("0") kr</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>


        }
    </div>
    </div>
}