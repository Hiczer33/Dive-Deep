@model diveDeep.Models.Booking

@{
    ViewData["Title"] = "Booking";
}

<div class="row">
    <div class="col-6 ps-4">
        <img src="@Model?.ImageUrl ?? " /images/placeholder.jpg""
             class="rounded product-img"
             alt="Booking billede"
             style="max-width:500px; max-height:500px;" />

        <p class="card-text mb-1">
            <strong>Beskrivelse:</strong> @Model?.Description
        </p>
    </div>

    <div class="col-6">
        <form asp-action="ConfirmBooking" asp-controller="Booking" method="post">
            <input type="hidden" asp-for="Id" />
            
            <div class="mb-3">
                <label asp-for="StartDate" class="form-label"><strong>Startdato:</strong></label>
                <input asp-for="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EndDate" class="form-label"><strong>Slutdato:</strong></label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PeopleCount" class="form-label"><strong>Antal personer:</strong></label>
                <input asp-for="PeopleCount" type="number" class="form-control" min="1" />
                <span asp-validation-for="PeopleCount" class="text-danger"></span>
            </div>

            <p class="card-text mb-1">
                <strong>Pris i alt:</strong> @Model?.TotalPrice kr
            </p>

            <div class="container text-center my-3">
                <button type="submit" class="btn btn-primary">Bekræft booking</button>
            </div>
        </form>
    </div>
</div>
