<div class="row">
    <div class="col-6 ps-4">
        <img src="@Model.ImageUrl" class="rounded "alt="Mangler billede af BCDprodukt" class="product-img" style="max-width:500px; max-height:500px; width:auto; height:auto;" />
        <p class="card-text mb-1"><strong>Beskrivelse: </strong>@Model.Description </p>

    </div>
    <div class="col-6">
        <p class="card-text mb-1"><strong>Brand: </strong>@Model.Brand </p>
        <p class="card-text mb-1"><strong>Model: </strong>@Model.Model </p>
       
        <div class="mb-3">
            <label for="size" class="form-label"><strong>Størrelse: </strong></label>
            <select id="size" name="SelectedSize" class="form-select">
                @foreach (var size in Model.Size)   // Model.Size er List<SizeType> fx S, M, L
                {
                    <option value="@size">@size</option>
                }

            </select>
            <div class="mb-3">
                <label for="gender" class="form-label"><strong>Køn: </strong></label>
                <select id="gender" name="SelectedSize" class="form-select">
        public List<GenderType> Gender { get; set; }
                    @foreach (var size in Model.Gender)   // Model.Size er List<SizeType> fx S, M, L
                    {
                        <option value="@size">@size</option>
                    }

                </select>
                <p class="card-text mb-1"><strong>Pris/dag: </strong> @Model.PricePrDay kr </p>
        </div>
    </div>
</div